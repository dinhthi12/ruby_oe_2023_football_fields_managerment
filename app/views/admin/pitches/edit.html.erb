<% provide :title, t("user.home.log_in") %>
<header class="py-5">
  <div class="container px-lg-5">
    <h1 class="display-5 fw-bold text-center"><%= t "user.home.log_in" %></h1>
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <%= form_for @pitch, url: admin_pitch_path do |f| %>
          <%= render "shared/error_messages", object: f.object %>
          <%= f.label :name, t(".name") %>
          <%= f.text_field :name, class: "form-control" %>
          <%= f.label :pitch_type, t(".pitch_type") %>
          <%= f.select :pitch_type, field_type, class: "form-control" %>
          <%= f.label :rate, t(".rate") %>
          <%= f.select :rate, rate, class: "form-control" %>
          <%= f.label :hour_price, t(".hour_price")%>
          <%= f.number_field :hour_price, in: Settings.soccer_field.price_range,
                                      step: Settings.soccer_field.price_step,
                                      :value => Settings.soccer_field.price_default, class: "form-control" %>

          <%= f.submit t("btn.create"), class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </header>
