<h3 class = "text-center"><%= t "pitch.lispitch" %></h3>
<%= form_with url: pitches_path, method: :get do |f| %>
  <%= f.text_field :name, class: "search-form",placeholder: t("pitch.name") %>
  <%= f.text_field :price, class: "search-form",placeholder: t("pitch.price") %>
  <%= f.submit t("btn.search"), class: "btn btn-primary" %>
<% end %>
<table class="table text-center">
  <thead>
    <tr>
      <th><%= t "table.name_pitch" %></th>
      <th><%= t "table.rate" %></th>
      <th><%= t "table.pitch_type" %></th>
      <th><%= t "table.hour_price" %></th>
      <th><%= t "table.action" %></th>
    </tr>
  </thead>
  <tbody>
    <%= render(@pitches) ||  t("pitch.notfound") %>
  </tbody>
</table>
<%== pagy_bootstrap_nav(@pagy) %>
